<div id = 'search-box'>
<%= form_tag('/venues', :method => :get, :id => 'search', :remote => true) do %>

  <%= text_field_tag :search, params[:search], :id => 'autocomplete', placeholder: "City" %>
  <%= check_box_tag(:bar) %>
	<%= label_tag(:bar, "Bars") %>
	<%= check_box_tag(:night_club) %>
	<%= label_tag(:night_club, "Night Clubs") %>
	<%= check_box_tag(:food) %>
	<%= label_tag(:food, "Hunger Games") %>
	<%= check_box_tag(:all) %>
	<%= label_tag(:all, "Clairvoyant") %>

  <div class="actions">
    <%= submit_tag 'Search', :name => nil %>
  </div>
<% end %>
</div>
<img src="assets/my_location.png" id="my-location">
